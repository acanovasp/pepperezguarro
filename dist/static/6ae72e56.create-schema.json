                    {
                      "title": "9:16 (Portrait)",
                      "value": "9:16"
                    },
                    {
                      "title": "4:3 (Standard)",
                      "value": "4:3"
                    },
                    {
                      "title": "1:1 (Square)",
                      "value": "1:1"
                    },
                    {
                      "title": "21:9 (Ultrawide)",
                      "value": "21:9"
                    },
                    {
                      "title": "Custom",
                      "value": "custom"
                    }
                  ]
                },
                "initialValue": "16:9",
                "description": "Video aspect ratio (e.g., \"16:9\", \"4:3\", \"9:16\", \"1:1\"). Default is 16:9 if not specified.",
                "name": "aspectRatio",
                "type": "string"
              },
              {
                "description": "If \"Custom\" is selected above, enter aspect ratio as \"width:height\" (e.g., \"2.35:1\")",
                "hidden": "conditional",
                "name": "customAspectRatio",
                "type": "string"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "min",
                        "constraint": 0
