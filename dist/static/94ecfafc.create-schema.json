[
  {
    "fields": [
      {
        "options": {
          "list": [
            {
              "title": "Project",
              "value": "project"
            },
            {
              "title": "Travel",
              "value": "travel"
            },
            {
              "title": "Commercial",
              "value": "commercial"
            },
            {
              "title": "Editorial",
              "value": "editorial"
            }
          ],
          "layout": "dropdown"
        },
        "initialValue": "project",
        "validation": [
          {
            "rules": [
              {
                "flag": "valid",
                "constraint": [
                  "project",
                  "travel",
                  "commercial",
                  "editorial"
                ]
              },
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "Project category - affects numbering prefix (P01, T01, C01, E01)",
        "name": "category",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              },
              {
                "flag": "min",
                "constraint": 0
              }
            ],
            "level": "error"
          }
        ],
        "description": "Position within category (1, 2, 3, etc.). Each category has its own numbering.",
        "name": "number",
        "type": "number",
        "title": "Number (within category)"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "name": "title",
        "type": "string"
      },
      {
        "options": {
          "source": "title",
          "maxLength": 96
        },
        "validation": [
          {
            "rules": [
              {
                "flag": "custom"
              },
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "description": "Auto-generated from title. Used in URL.",
        "name": "slug",
        "type": "slug"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "name": "location",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "name": "year",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              }
            ],
            "level": "error"
          }
        ],
        "of": [
          {
            "marks": {
              "annotations": []
            },
            "styles": [
              {
                "value": "normal",
                "title": "Normal"
              }
            ],
            "of": [],
            "type": "block"
          }
        ],
        "name": "description",
        "type": "array"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "presence",
                "constraint": "required"
              },
              {
                "flag": "min",
                "constraint": 1
              }
            ],
            "level": "error"
          }
        ],
        "description": "Upload images in bulk. Alt text will be auto-generated as Title-01, Title-02, etc.",
        "of": [
          {
            "options": {
              "hotspot": true,
              "metadata": [
                "lqip",
                "palette"
              ]
            },
            "type": "image"
          }
        ],
        "name": "images",
        "type": "array"
      },
      {
        "description": "Add videos from Vimeo, YouTube, or other platforms. Videos will be displayed alongside images in the project slideshow.",
        "of": [
          {
            "fields": [
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
                        "constraint": "required"
                      },
                      {
                        "flag": "uri",
                        "constraint": {
                          "options": {
                            "scheme": [
                              "/^https$/",
                              "/^http$/"
                            ],
                            "allowRelative": false,
                            "relativeOnly": false,
                            "allowCredentials": false
                          }
                        }
                      }
                    ],
                    "level": "error"
                  }
                ],
                "description": "Full URL from Vimeo (https://vimeo.com/...) or YouTube (https://www.youtube.com/watch?v=...)",
                "name": "url",
                "type": "url",
                "title": "Video URL"
              },
              {
                "description": "Optional: Custom title for the video",
                "name": "title",
                "type": "string",
                "title": "Video Title"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "uri",
                        "constraint": {
                          "options": {
                            "scheme": [
                              "/^http$/",
                              "/^https$/"
                            ],
                            "allowRelative": false,
                            "relativeOnly": false,
                            "allowCredentials": false
                          }
                        }
                      }
                    ],
                    "level": "error"
                  }
                ],
                "description": "Optional: Custom thumbnail image URL. If not provided, will attempt to fetch from video provider.",
                "name": "thumbnailUrl",
                "type": "url",
                "title": "Custom Thumbnail URL"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "min",
                        "constraint": 0
                      }
                    ],
                    "level": "error"
                  }
                ],
                "description": "Where to insert this video among the images (e.g., 3 = after the 3rd image). Leave empty to add at the end.",
                "name": "position",
                "type": "number",
                "title": "Position in Gallery"
              }
            ],
            "type": "object",
            "name": "video"
          }
        ],
        "name": "videos",
        "type": "array"
      },
      {
        "description": "Optional: e.g., \"In collaboration with Ana Gallart\"",
        "name": "collaboration",
        "type": "string"
      },
      {
        "description": "Optional: e.g., \"Thinking Mu\" or \"Personal Project\"",
        "name": "client",
        "type": "string"
      },
      {
        "description": "Optional: e.g., \"Shot between April 12 - May 2\"",
        "name": "date",
        "type": "string"
      }
    ],
    "name": "project",
    "type": "document"
  },
